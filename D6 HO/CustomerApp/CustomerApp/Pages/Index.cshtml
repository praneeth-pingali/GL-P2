@page
@model CustomerApp.Pages.IndexModel
@{
    ViewData["Title"] = "Customer Management";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Customer Management</h2>

    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">Add Customer</h4>
        <form method="post">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Name:</label>
                    <input type="text" asp-for="Customer.Name" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Address:</label>
                    <input type="text" asp-for="Customer.Address" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Country:</label>
                    <input type="text" asp-for="Customer.Country" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">City:</label>
                    <input type="text" asp-for="Customer.City" class="form-control" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Phone:</label>
                    <input type="text" asp-for="Customer.Phoneno" class="form-control" required />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" asp-page-handler="Create" class="btn btn-primary w-100">Add</button>
                </div>
            </div>
        </form>
    </div>

    <div class="card shadow p-4">
        <h4 class="mb-3">Customer List</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@customer.Name</td>
                        <td>@customer.Address</td>
                        <td>@customer.Country</td>
                        <td>@customer.City</td>
                        <td>@customer.Phoneno</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
